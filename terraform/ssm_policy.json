{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Action": [
          "ssm:GetParameters",
          "ssm:GetParameter",
          "ssm:GetParametersByPath"
        ],
        "Resource": [
          "arn:aws:ssm:${region}:${account}:parameter/smoke-tests",
          "arn:aws:ssm:${region}:${account}:parameter/smoke-tests/*"
        ],
        "Effect": "Allow"
      },
      {
        "Action": [
          "kms:Decrypt"
        ],
        "Resource": "${master_key_arn}",
        "Effect": "Allow"
      }
    ]
  }